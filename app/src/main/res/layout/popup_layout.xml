<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pname_popup_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停车场名称"
        android:textColor="@color/snow" />

    <TextView
        android:id="@+id/remainingspace_popup_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="剩余车位"
        android:textColor="@color/snow" />

    <TextView
        android:id="@+id/distance_popup_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="距离"
        android:textColor="@color/snow" />

    <TextView
        android:id="@+id/price_popup_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停车价格"
        android:textColor="@color/snow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_popup_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/snow" />

        <Button
            android:id="@+id/confirm_popup_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/snow"
            android:text="去这里" />
    </LinearLayout>


</LinearLayout>
